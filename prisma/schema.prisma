
generator client {
  provider = "prisma-client"
  output   = "../src/@generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  status      Status    @default(PENDING)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum Status {
  PENDING
  COMPLETED
}